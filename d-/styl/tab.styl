@import 'variable.styl'
.{$pf}tab{
	width 100%;
	overflow hidden;
	background-color #fff;
}
.{$pf}tab-nav{
	display:-webkit-box;
	display:-webkit-flex;
	display:flex;
	box-sizing border-box;
	background-color #fff;
	height 45px;
}
.{$pf}tab-nav li{
	display-flex:1;
	width 100%;
	text-align center;
	height:45px;
	line-height:45px;
}
.{$pf}tab-nav .current{
    color: #00a5e0;
    border-bottom: 2px #00a5e0 solid;
}
.{$pf}tab-content{
	 // display: -webkit-box; 
}


.{$pf}tab-content > li {
  // -webkit-box-flex: 1;
  width: 100%; }
.{$pf}tab-content-hide{
	display none;
}