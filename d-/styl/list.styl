@import 'variable.styl'
.{$pf}list{
	background-color #fff;
	// margin-bottom:$margin-10;
	width:100%;
}
.{$pf}list-content{
	box-sizing: border-box;
    min-height:$height-44;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}

.{$pf}list .{$pf}list-items{
	display -webkit-box;
	display -webkit-flex;
	display flex;
		width:100%
		box-sizing: border-box;	
  justify-content: start;      
	
}
.{$pf}list-items .{$pf}list-img-wrap{
    margin:0 $margin-1;
}
.{$pf}list li{
    padding:$margin-5 0;
    position:relative;
}
.{$pf}list-info{
	padding-left:$margin-11;
	-webkit-box-flex: 1;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-box-pack: center;
    display:-moz-box;
    -moz-box-pack:center;
    -moz-box-align:center;
    display:box;
    box-pack:center;
}
.{$pf}list-txt{
    font-size:$font-size-14;
    color: #5f646e;
    line-height:$height-20;
    position: relative;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    padding-left:0.125rem;
}
.{$pf}list-txt-clamp-2{
    -webkit-line-clamp: 2;
    line-clamp: 2;
}
.{$pf}list-txt-clamp-3{
    -webkit-line-clamp: 3;
    line-clamp: 3;
}
.{$pf}list li:active{
    background-color:#eee;
    }
