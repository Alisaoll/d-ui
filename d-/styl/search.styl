@import "variable.styl"
.{$pf}search{
	display: -webkit-box;
    -webkit-box-pack: center;/*子元素水平对齐方式*/
    -webkit-box-align: center;/*子元素垂直对齐方式*/
    height: 2.2rem;
    overflow: hidden;
    width: 100%;
    background-color: #ebeced;
    color: #9e9e9e;
    -webkit-backface-visibility: hidden;/*隐藏被旋转的 div 元素的背面：*/
    backface-visibility: hidden;
	}
	
.{$pf}search-box{
		margin: 0 0.5rem;
    background-color: #ffffff;
    border-radius: 0.25rem;
    height: 1.5rem;
    line-height: 1.5rem;
    font-size: 0.7rem;
    width: 100%;
    position: relative;
    padding:0 0.5rem;
    display: -webkit-box;
    -webkit-box-flex: 1;
    box-sizing: border-box;

	}
.{$pf}search-box input{
	        width:99%;
			display: -webkit-box;
			background: #fff;
			border:0px;	
			outline: none;
	}
	
.{$pf}search .cancel{
		font-size: 0.7rem;
	    color: #666666;
	    margin-right: -2.2rem;
	    width: 2.2rem;
	    height: 1.5rem;
	    line-height: 1.5rem;
	    -webkit-transition: all .3s;
	    transition: all .3s;
}
