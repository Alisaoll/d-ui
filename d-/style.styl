invoke(a,b,fn)
    fn(a,b)
add(a,b)
    a+b
sub(a,b)
    a-b
border(color)
	border 1px solid color
body
	padding invoke(5,10,add)
html
	font-size 20px
  
.uls
	margin 0
	padding 0
	width 100%
	height 2em
	line-height 2em
	display table
	li
		list-style none
		display table-cell
		text-align center
		color #333
		border(red)
		border-right none
		&:last-child
			border-right 1px solid red
		&:hover
			background-color #ddd
		


_function(){
	font-size:arguments[0];
	color:arguments[1]
}
span{
	_function(12px,#000)
}


