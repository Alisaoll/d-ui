@import 'variable.styl'
/**
 * 弹窗类
 */
.{$pf}dialog {
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: 9;
  display: -webkit-box;
  -webkit-box-orient: horizontal;
  -webkit-box-pack: center;
  -webkit-box-align: center;
  background: rgba(0, 0, 0, 0.4);
}
.{$pf}dialog-box{
    border-radius:$boeder-r-6;
    width: $width-270;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;  
    background-color: rgba(253, 253, 253, 0.95);
    position: relative;
    font-size: 0.8rem;
}
.{$pf}dialog-hd{
  height $height-44;
  line-height $height-44;
  position relative;
  text-align center;
  border:1px solid #e0e0e0;
 
}
.{$pf}dialog-hd span{
    display:block;
    width:$height-26;
    height:$height-26;
    border-radius $boeder-r-13;
    position absolute;
    right:$right-5;
    top:$top-8;
    border:1px solid #ccc;
    line-height $height-26;
  }
.{$pf}dialog-content{
    min-height: $height-71;
    border-top-left-radius:$boeder-r-6
    border-top-right-radius:$boeder-r-6;
    padding: $margin-18;
    display: -webkit-box;
    display: box;
    -webkit-box-pack: center;
    -webkit-box-align: center;
    -webkit-box-orient: vertical;
}
.{$pf}dialog-footer{
    border-bottom-left-radius:$boeder-r-6;
    border-bottom-right-radius:$boeder-r-6;
    display: -webkit-box;
    width: 100%;
    box-sizing: border-box;
    -webkit-box-align: center;
    border-top: 1px solid #e0e0e0;
    height: $height-42;
    line-height: $height-42;
    button{
     color: #00a5e0;
    text-align: center;
    border:0;
    width: 100%;
    line-height:$height-40;
    background: transparent;
    border-right: 1px #e0e0e0 solid;
    display: block;
    margin: 0 !important;
    -webkit-box-flex: 1; 
    }     
}
.{$pf}dialog-footer button:last-child {
      border: none; } 


@media screen and (-webkit-min-device-pixel-ratio: 2) {
  .{$pf}dialog-footer{
    position: relative;
    border: 0;
    background-position: left top;
    background-image: -webkit-gradient(linear, left bottom, left top, color-stop(0.5, transparent), color-stop(0.5, #e0e0e0), to(#e0e0e0));
    background-repeat: repeat-x;
    -webkit-background-size: 100% 1px; }
    .{$pf}dialog-hd{
       position: relative;
        border: 0;
      background-position: left bottom;
      background-image: -webkit-gradient(linear, left bottom, left top, color-stop(0.5, transparent), color-stop(0.5, #e0e0e0), to(#e0e0e0));
      background-repeat: repeat-x;
      -webkit-background-size: 100% 1px; 
    }
   

  .{$pf}dialog-footer button {
    border-right: 0;
    background-position: right top;
    background-image: -webkit-gradient(linear, left top, right top, color-stop(0.5, transparent), color-stop(0.5, #e0e0e0), to(#e0e0e0));
    background-repeat: repeat-y;
    -webkit-background-size: 1px 100%; 
  }
    .{$pf}dialog-footer button:last-child {
      background: none; } 
    }
