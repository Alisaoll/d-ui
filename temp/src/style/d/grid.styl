.{$pf}grid{//宫格
     font-size:$font-size-14;
     padding:0.5rem;
}
.{$pf}grid .{$pf}row{

}
.{$pf}grid .{$pf}row [class*=d-col-xs-]{
  padding:0.5rem 0.25rem;
}
.{$pf}grid .{$pf}grid-txt{ 
    margin: 0 auto;
    text-align: center;
    margin-top: 0.5rem ;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    -webkit-box-flex: 1;
    height: inherit;
 }
.{$pf}grid .{$pf}badge{
  position: absolute;
    top: 7px;
    left: 58%;
    font-size: 0.5rem;
    color: #fff;
    background-color: #ff2600;
    border-radius: 0.4rem;
    display: inline-block;
    padding: 0 0.125rem;
    line-height: 0.8rem;
    height: 0.8rem;
    width: 0.8rem;
    text-align: center;
}

.{$pf}circular img{
   border-radius: 5rem !important;
}
.{$pf}grid img{
    width: 2.5rem;
    height: 2.5rem;
    margin: 0 auto;
    display: block;
    -webkit-background-size: cover;
    -webkit-border-radius: 0.5rem;
    border-radius: 0.5rem;
    background-size: cover;
    overflow: hidden;
    
}
